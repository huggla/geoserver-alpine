initGeoserver(){
   ln -s "$VAR_context4_GEOSERVER_DATA_DIR" "/usr/local/tomcat/webapps/geoserver/data"
   VAR_context4_GEOSERVER_DATA_DIR="/usr/local/tomcat/webapps/geoserver/data"
   local contextParams="$(configFromVarGroup context)"
   local IFS=$(echo -en "\n\b")
   local param=""
   {
      cat "/usr/local/tomcat/webapps/geoserver/WEB-INF/web.xml.tmp1"
      for param in $contextParams
      do
         echo " <context-param>"
         echo "  <param-name>$(trim "${param%%=*}")</param-name>"
         echo "  <param-value>$(trim "${param#*=}")</param-value>"
         echo " </context-param>"
      done
      cat "/usr/local/tomcat/webapps/geoserver/WEB-INF/web.xml.tmp2"
   } >> "/usr/local/tomcat/webapps/geoserver/WEB-INF/web.xml"
}
